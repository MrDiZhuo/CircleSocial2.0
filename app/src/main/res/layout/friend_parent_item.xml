<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/title">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/friend_parent_img"
            android:layout_width="@dimen/nomal_margin"
            android:layout_height="@dimen/nomal_margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_centerVertical="true"
            android:layout_weight="0.03" />
        <TextView
            android:id="@+id/friend_parent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toRightOf="@id/friend_parent_img"
            android:textSize="@dimen/smallsize"
            android:textColor="@color/nomaltext"
            android:text="123"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/friend_parent_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext"
                android:text="/"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/friend_parent_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>