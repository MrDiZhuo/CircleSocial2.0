<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgetpwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context="com.zwd.circlesocial20.Main.forgetpwd">

    <com.zwd.circlesocial20.widget.BackActionBar
        android:id="@+id/forget_pwd_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/forget_pwd_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_below="@id/forget_pwd_actionbar"
            android:background="@color/title"
            android:paddingLeft="@dimen/margin"
            android:hint="请输入手机号码"
            android:phoneNumber="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/nomaltextsize"
            android:textColor="@color/nomaltext"
            android:textColorHint="@color/hint"/>


    <EditText
        android:id="@+id/forget_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@id/forget_pwd_phone"
        android:layout_marginTop="@dimen/hidder"
        android:background="@color/title"
        android:paddingLeft="@dimen/margin"
        android:hint="请输入新密码"
        android:password="true"
        android:textSize="@dimen/nomaltextsize"
        android:textCursorDrawable="@null"
        android:textColor="@color/nomaltext"
        android:textColorHint="@color/hint"/>
    <EditText
        android:id="@+id/forget_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@id/forget_pwd_new"
        android:layout_marginTop="@dimen/hidder"
        android:background="@color/title"
        android:paddingLeft="@dimen/margin"
        android:hint="请确认新密码"
        android:password="true"
        android:textSize="@dimen/nomaltextsize"
        android:textCursorDrawable="@null"
        android:textColor="@color/nomaltext"
        android:textColorHint="@color/hint"/>
    <RelativeLayout
        android:id="@+id/forget_pwd_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@id/forget_pwd_confirm"
        android:background="@color/title"
        android:layout_marginTop="@dimen/hidder">
        <EditText
            android:id="@+id/forget_pwd_vertification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:hint="请输入验证码"
            android:textSize="@dimen/nomaltextsize"
            android:background="@color/title"
            android:textCursorDrawable="@null"
            android:numeric="integer"
            android:textColor="@color/nomaltext"
            android:textColorHint="@color/hint"/>
        <Button
            android:id="@+id/forget_pwd_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/button"
            android:text="获取验证码"
            android:textSize="@dimen/nomaltextsize"
            android:textColor="@color/button"/>
    </RelativeLayout>

    <Button
        android:id="@+id/forget_pwd_yes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button"
        android:layout_below="@+id/forget_pwd_relative"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yes"
        android:text="确认"
        android:textColor="@color/title"
        android:textSize="@dimen/nomaltextsize"
        android:gravity="center"/>


</LinearLayout>
