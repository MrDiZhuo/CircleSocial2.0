<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nomal_margin"
        android:layout_marginTop="@dimen/nomal_margin">
        <com.zwd.circlesocial20.util.CircleImageView
            android:id="@+id/item_circle_tab_1_head"
            android:layout_width="@dimen/friend_img"
            android:layout_height="@dimen/friend_img"
            android:src="@mipmap/me_head"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/nomal_margin">
        <TextView
            android:id="@+id/item_circle_tab_1_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:text="张杰"
            android:textSize="@dimen/smallsize"
            android:textColor="@color/nomaltext"/>
        <TextView
            android:id="@+id/item_circle_tab_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/circle_motion"
            android:text="明月几时有
把酒问晴天"
            android:textSize="@dimen/supersmall" />
        <com.loveplusplus.demo.image.NoScrollGridView
            android:id="@+id/item_circle_tab_1_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:horizontalSpacing="@dimen/hidder"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:visibility="gone"
            android:verticalSpacing="@dimen/hidder" />

        <ListView
            android:id="@+id/item_circle_tab_1_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:background="@color/back"
            android:descendantFocusability="blocksDescendants"
            android:dividerHeight="@dimen/littlehidder"/>
        <TextView
            android:id="@+id/item_circle_tab_1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="41分钟前"
            android:textSize="@dimen/supersmall"/>
    </LinearLayout>

</LinearLayout>