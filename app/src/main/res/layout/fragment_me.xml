<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context="com.zwd.circlesocial20.ViewPager.MeFragment">

    <com.zwd.circlesocial20.widget.BackActionBar
        android:id="@+id/me_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/me_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/littlehidder"
        android:background="@color/title"
        android:orientation="horizontal">

        <com.zwd.circlesocial20.util.CircleImageView
            android:id="@+id/me_head"
            android:layout_width="@dimen/big_img"
            android:layout_height="@dimen/big_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:src="@mipmap/me_head" />

        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_toEndOf="@+id/me_head"
            android:text="像星星一样闪亮"
            android:textColor="@color/nomaltext"
            android:textSize="@dimen/nomaltextsize" />

            <ImageView
                android:id="@+id/me_tool_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/left"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/littlehidder"
        android:background="@color/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/me_margin"
        android:background="@color/title">
        <ListView
            android:id="@+id/me_list"
            android:background="@color/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:listSelector="@color/transparent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/back"
            android:dividerHeight="@dimen/littlehidder"/>

    </LinearLayout>

</LinearLayout>
