<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/ll_quyu"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排列顺序"
                android:layout_marginTop="@dimen/nomal_margin"
                android:layout_marginBottom="@dimen/nomal_margin"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext" />

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:src="@mipmap/ic_down" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/littlehidder"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:background="@color/back" />


        <LinearLayout
            android:id="@+id/ll_jiage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聚会类型"
                android:layout_marginTop="@dimen/nomal_margin"
                android:layout_marginBottom="@dimen/nomal_margin"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:src="@mipmap/ic_down" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/littlehidder"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:background="@color/back" />


        <LinearLayout
            android:id="@+id/ll_huxing"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/huxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排列地点"
                android:layout_marginTop="@dimen/nomal_margin"
                android:layout_marginBottom="@dimen/nomal_margin"
                android:textSize="@dimen/smallsize"
                android:textColor="@color/nomaltext" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:src="@mipmap/ic_down" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>