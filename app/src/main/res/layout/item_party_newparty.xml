<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/party_newparty"
        android:layout_marginLeft="@dimen/nomal_margin"
        android:layout_marginRight="@dimen/nomal_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动配图"
            android:textSize="@dimen/nomaltextsize"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:layout_gravity="center_horizontal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/littlehidder"
            android:background="@color/back"/>
        <TextView
            android:id="@+id/item_party_newparty_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相册"
            android:textSize="@dimen/action_bar_title"
            android:textColor="@color/tab_after"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/littlehidder"
            android:background="@color/back"/>
        <TextView
            android:id="@+id/item_party_newparty_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textSize="@dimen/action_bar_title"
            android:textColor="@color/tab_after"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/party_newparty"
        android:orientation="vertical"
        android:layout_margin="@dimen/nomal_margin">
        <TextView
            android:id="@+id/item_party_newparty_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="@dimen/action_bar_title"
            android:textColor="@color/tab_after"
            android:layout_marginTop="@dimen/nomal_margin"
            android:layout_marginBottom="@dimen/nomal_margin"
            android:gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>