<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title">
    <ImageView
        android:id="@+id/choose_image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/nomal_margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/nomal_margin" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nomal_margin"
        android:layout_marginBottom="@dimen/nomal_margin"
        android:layout_marginLeft="@dimen/nomal_margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/choose_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/tab_after"
            android:text="魔兽世界聚会"
            android:textSize="@dimen/smallsize"/>
        <TextView
            android:id="@+id/choose_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/nomal_margin"
            android:text="有没有某某去的"
            android:textColor="@color/nomaltext"
            android:textSize="@dimen/supersmall" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/nomal_margin">
            <TextView
                android:id="@+id/choose_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/nomal_margin"
                android:text="分"
                android:textColor="@color/tab_before"
                android:textSize="@dimen/supersmall"/>
            <TextView
                android:id="@+id/choose_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/choose_fen"
                android:text="5"
                android:textColor="@color/tab_before"
                android:textSize="@dimen/supersmall"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/choose_mark"
                android:layout_marginRight="@dimen/small_margin"
                android:text="评分:"
                android:textColor="@color/tab_before"
                android:textSize="@dimen/supersmall"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>