<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_me__property"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zwd.circlesocial20.Me.Me_Property">
    <com.zwd.circlesocial20.widget.BackActionBar
        android:id="@+id/me_property_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toobar">
        <TextView
            android:id="@+id/me_property_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:text="账户余额"
            android:textSize="@dimen/nomaltextsize"
            android:textColor="@color/title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="（元）"
            android:textColor="@color/title"
            android:textSize="@dimen/nomaltextsize"
            android:layout_toRightOf="@id/me_property_t1"/>
        <TextView
            android:id="@+id/me_property_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_below="@id/me_property_t1"
            android:text="0.00"
            android:textSize="@dimen/biggersize"
            android:textColor="@color/title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title">
        <ListView
            android:id="@+id/me_property_list"
            android:background="@color/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/littlehidder"
            android:listSelector="@color/transparent"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/back"
            android:dividerHeight="@dimen/littlehidder"/>
    </LinearLayout>


</LinearLayout>
